<!DOCTYPE html>
<html>
<head>
	<title>Score Board</title>
	<style>
		table {
			border-collapse: collapse;
			width: 100%;
		}

		th, td {
			padding: 8px;
			text-align: left;
			border-bottom: 1px solid #ddd;
		}

		th {
			background-color: #f2f2f2;
			color: #333;
			font-weight: normal;
		}

		.first-place {
			font-weight: bold;
			color: green;
		}

		.second-place {
			font-weight: bold;
			color: blue;
		}

		.third-place {
			font-weight: bold;
			color: orange;
		}
	</style>
</head>
<body>
	<table>
		<thead>
			<tr>
				<th>Rank</th>
				<th>User</th>
				<th>Score</th>
			</tr>
		</thead>
		<tbody>
            <% for(let i = 0;i < data.length;i++){ %>
			<tr>
				<td class="first-place"><%= (i  + 1) %></td>
				<td><%= data[i].user %></td>
				<td><%= data[i].score %></td>
			</tr>
        <% } %> 
        </tbody>       
	</table>
</body>
</html>
